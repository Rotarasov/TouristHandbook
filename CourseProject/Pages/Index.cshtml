@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "_LoginLayout";
}

    <div class="container">
        <main role="main" class="mt-5">
            <h1>Login</h1> <br />
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group" autocomplete="off">
                    <label asp-for="CurrentUser.Email">Email address</label>
                    <input asp-for="CurrentUser.Email" type="email" class="form-control" placeholder="Enter email" autocomplete="off">
                </div>
                <div class="form-group">
                    <label asp-for="CurrentUser.Password">Password</label>
                    <input asp-for="CurrentUser.Password" type="password" class="form-control" placeholder="Password" autocomplete="off">
                </div>
                <button type="submit" class="btn btn-primary btn-lg my-3">Sign in</button> <br />
                <a asp-page="Register">Register</a>
            </form>
        </main>
    </div>