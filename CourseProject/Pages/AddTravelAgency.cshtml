@page "{userId}"
@model CourseProject.Pages.AddTravelAgencyModel
@{
    ViewData["Title"] = "AddTravelAgency";
}

<h1>Travel Agency <span class="badge badge-primary">New</span></h1>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input hidden asp-for="UserId" />
    <div class="form-group">
        <label asp-for="Agency.Title">Title</label>
        <input asp-for="Agency.Title" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Agency.ToursId"></label>
        <select class="form-control" asp-for="Agency.ToursId" asp-items="Model.SelectOptions" multiple></select>
    </div>
    <button asp-page-handler="ok" class="btn-lg btn-success">OK</button>
    <button asp-page-handler="cancel" type="submit" class="btn-lg btn-danger ml-3">Cancel</button>
</form>

